<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
   android:layout_gravity="center"
android:background="#DDDCDC"
    android:layout_height="match_parent"
    tools:context=".SetipProfile"
    tools:ignore="ExtraText">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="120dp"
        android:id="@+id/userimage"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gotham"
        android:text="Profile Information"
        android:textAlignment="center"
        android:textColor="#0D1242"
        android:textSize="17dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/msgsetprofile"
        android:fontFamily="@font/gotham"
        android:text="Please set your Name and an Profile Image"
        android:textAlignment="center"
        android:textColor="#010523"
        android:textSize="13dp" />

<com.google.android.material.card.MaterialCardView
    android:layout_width="300sp"
    android:layout_height="wrap_content"

    android:layout_marginTop="50dp"
    app:cardCornerRadius="19dp"

    android:layout_gravity="center_horizontal"
  >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/bluecolor">

    <EditText
        android:id="@+id/username"
        style="@style/ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox.Dense"
        android:layout_width="260sp"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Enter your Name"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        tools:ignore="RtlCompat" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continuebtn"
        android:layout_width="245sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:text="Continue"
        android:textColor="@color/purple_700"
        android:textSize="16sp"
        android:textStyle="bold|normal"
        app:cornerRadius="12dp" />

</RelativeLayout>
</com.google.android.material.card.MaterialCardView>



</LinearLayout>